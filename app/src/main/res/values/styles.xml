<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@android:color/black</item>
    </style>

    <style name="loginNoTitleTheme" parent="Theme.AppCompat.Dialog">

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:colorBackground">#00000000</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:windowBackground">@null</item>

    </style>

    <!--这里是新闻的条目的中title的样式-->
    <style name="newsItemTitleTextStyle">

        <!--   android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:ellipsize="end"
           android:lineSpacingMultiplier="1.3"
           android:lines="2"
           android:text="22222222222222222222222222222222222222222222333333222222222"
           android:textColor="@color/text_black"
           android:textSize="16sp"-->

        <item name="android:ellipsize">end</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="newsItemImgOneTextTitleStyle" parent="newsItemTitleTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lines">2</item>
    </style>

    <!-- 这里是新闻条目下面的评论，来源，时间的一个基础样式；-->
    <style name="newsItemDescBaseStyle">

        <!-- android:textSize="12sp"
         android:textColor="@color/text_gray"-->
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <!--这里是item的基础样式；-->
    <style name="newsItemBaseStyle">

        <!--        android:paddingBottom="15dp"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="12dp"-->

        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <!--三图的样式；-->
    <style name="newsItemThreeImgStyple">

        <!--      android:layout_width="0dp"
              android:layout_height="70dp"
              android:layout_weight="1"
              android:background="@color/colorPrimaryDark"
              android:scaleType="centerCrop"-->

        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@color/defaultImgColor</item>
    </style>


    <style name="userItemHorizotalStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">7dp</item>
        <item name="android:background">@color/user_item_horizontal_divider_color_bg</item>
    </style>

    <style name="userItemHorizotalStyle_v1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:background">@color/user_item_horizontal_divider_color_bg</item>
    </style>

    <!--用户操作的条目的样式-->
    <style name="userOperationItemStyle">

        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@color/white_color</item>
    </style>

    <!--图标的样式-->
    <style name="userOperationItemImageStyle">

        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:src">@mipmap/ic_launcher</item>
        <item name="android:layout_marginLeft">24dp</item>

    </style>

    <!-- 指示器的样式-->
    <style name="userOperationItemIndicatorStyle">

        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:src">@drawable/icon_arrow_right</item>
        <item name="android:layout_marginRight">22dp</item>
    </style>

    <style name="userOperationItemIndicatorStyle_v1">

        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:src">@drawable/icon_arrow_right_v1</item>
        <item name="android:layout_marginRight">22dp</item>
    </style>

    <!--文字的样式；-->
    <style name="userOperationItemTextStyle">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">我的收藏</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#4a4a4a</item>

    </style>

    <style name="userOperationItemTextStyle_v1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#333333</item>

    </style>

    <style name="money_detail_text_gray_style">

        <!--       android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="钱包余额"
               android:textColor="@color/money_detail_text_gray"
               android:textSize="@dimen/money_detail_default_text_size"-->

        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/money_detail_text_gray</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- 评论图标的样式；-->
    <style name="comment_icon_style">
        <!--        android:id="@+id/iv_share"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:src="@drawable/icon_share"
                android:padding="10dp"-->

        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:padding">12dp</item>
    </style>


    <style name="withdrawals_input_text_style">

        <!--   android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:text="支付宝账号"
           android:textColor="@color/text_light_black"
           android:textSize="16sp"
           android:layout_weight="1"-->
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_light_black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_weight">1</item>

    </style>

    <style name="withdrawals_input_edittext_style">

        <!--    android:id="@+id/et_pay_number"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="match_parent"
                android:hint="请输入支付宝账号"
                android:layout_marginLeft="20dp"
                android:background="@null"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"-->

        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">3</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:background">@null</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textSize">14sp</item>

    </style>

    <!--文字的样式-->
    <style name="share_text_style">

        <!--       android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="朋友圈"
               android:textColor="@color/white_color"
               android:layout_marginTop="8dp"-->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white_color</item>
        <item name="android:layout_marginTop">8dp</item>

    </style>
    <!--图标的样式-->
    <style name="share_icon_style">

        <!-- android:layout_width="50dp"
         android:layout_height="50dp"-->
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
    </style>
    <!--//条目的样式；-->
    <style name="share_item_style">

        <!--  android:layout_weight="1"
          android:layout_width="0dp"
          android:orientation="vertical"
          android:layout_height="wrap_content"
          android:gravity="center"-->
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>

    </style>


    <!--闪屏样式-->
    <style name="newsDetailStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="NoBackGroundDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!--这里是设置的item的样式-->
    <style name="settingItemStyle">

        <!--        android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/white_color"
                android:gravity="center_vertical"
                android:orientation="horizontal"-->

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:background">@color/white_color</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>

    </style>

    <style name="settingTextStyle">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>

    </style>

    <style name="settingLeftTextStyle" parent="settingTextStyle">
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:textColor">@color/text_black</item>

    </style>

    <style name="settingRightTextStyle" parent="settingTextStyle">
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:textColor">@color/text_light_black_777</item>

    </style>

    <!-- 设置里面的图片的样式-->
    <style name="settingImgStyle">

    </style>


    <style name="TextViewPublicLeft">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#818181</item>
        <item name="android:textSize">13sp</item>
    </style>


    <style name="loadingDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 背景透明 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->
    </style>

    <style name="inputDialog" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:windowBackground">@color/dialog_bg</item>
        <!--背景-->
        <item name="android:windowFrame">@null</item>
        <!--设置无边框-->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->
        <item name="android:windowSoftInputMode">stateAlwaysVisible</item>

        <!--显示软件盘-->

    </style>

    <!--分享的对话框-->
    <style name="dialog_share">

        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>

        <item name="android:windowAnimationStyle">@style/dialog_animation</item>
        <item name="android:windowCloseOnTouchOutside">true</item>

    </style>


    <style name="dialog_animation" parent="android:Animation">

        <item name="android:windowEnterAnimation">@anim/dialog_share_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_share_exit</item>

    </style>



    <style parent="@android:style/Theme.Dialog" name="dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 背景透明 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->
    </style>



    <style parent="AppTheme" name="Dialog.NoTitle">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/AnimationPicker</item>
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 半透明 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->
    </style>


    <style parent="android:Animation" name="AnimationPicker" mce_bogus="1">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

</resources>
