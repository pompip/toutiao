<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@color/white_color"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_light_black"
            android:text="签到领金币"
            android:textSize="14sp"
            />
        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/tv_sign"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:text="签到领金币"
            android:textSize="14sp"
            android:background="@drawable/bg_button_update"
            android:gravity="center"
            android:textColor="@color/white_color"
            />

    </LinearLayout>

    <com.huanxi.toutiao.ui.view.sign.SignView
        android:id="@+id/sv_sign_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/home_item_divider_color"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white_color"
        android:gravity="center_vertical"
        >

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_broadcast_message"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/home_item_divider_color"
            />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"

            android:text="每日签到得5金币 , 连续签到领取额外奖励！"
            android:textColor="@color/text_light_black"/>
    </LinearLayout>

</LinearLayout>