<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="vertical"
    android:background="@color/white_color"
    >

    <!--这里是提现记录的item-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="提现申请"
        android:textSize="16sp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/text_black"
        />

    <TextView
        android:id="@+id/tv_withdrawals_states"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="成功"
        android:textSize="16sp"
        android:textColor="@color/text_black"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        />
    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2018-1-26 21:40"
        android:textSize="14sp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/text_light_black_999"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/tv_withdrawals_states"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/withdrawals_record_divider_color"
        />

</RelativeLayout>