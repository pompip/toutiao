<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="49dp"
    android:background="@color/white_color"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_weight="1"
        >

        <!--这里是收入排行的item-->

        <FrameLayout
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            >

            <ImageView
                android:id="@+id/iv_ranking_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_launcher"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/tv_ranking_number"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_launcher"
                android:text="5"
                android:gravity="center"
                android:textSize="16sp"
                />

        </FrameLayout>

        <!--用户的名字-->

        <TextView
            android:id="@+id/tv_nick_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="andyMa3333333"
            android:gravity="center"
            android:textSize="16sp"
            android:lines="1"
            android:ellipsize="end"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />

        <!--用户的好友数-->

        <TextView
            android:id="@+id/tv_friend_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="2888"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="16sp"
            android:lines="1"
            android:ellipsize="end"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />

        <!--用户获取的金额数量-->

        <TextView
            android:id="@+id/tv_firend_get_total_money"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="6.6."
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="16sp"
            android:lines="1"
            android:ellipsize="end"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/home_item_divider_color"
        />

</LinearLayout>
