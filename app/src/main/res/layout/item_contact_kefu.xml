<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal"
    android:background="@color/white_color"
    >


    <TextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="QQ:"
        android:textSize="16sp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:textColor="@color/text_light_black"
        />

    <TextView
        android:id="@+id/tv_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="546861506"
        android:textSize="16sp"
        android:layout_marginLeft="20dp"
        android:layout_alignBaseline="@+id/tv_type"
        android:layout_alignBottom="@+id/tv_type"
        android:layout_toEndOf="@+id/tv_type"
        android:layout_marginStart="18dp"
        android:textColor="@color/text_light_black"
        />

    <TextView
        android:id="@+id/tv_kefu_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="点击复制"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_centerVertical="true"
        android:textColor="@color/text_light_black"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/home_item_divider_color"
        android:layout_alignParentBottom="true"
        />


</RelativeLayout>