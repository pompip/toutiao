<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <com.huanxi.toutiao.ui.view.PercentLinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:background="@drawable/dialog_jp"
        android:orientation="vertical"
        app:layout_heightPercent="70%"
        app:layout_widthPercent="80%">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="17%"
            app:layout_widthPercent="100%"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_heightPercent="7%"
            app:layout_widthPercent="100%">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|bottom"
                android:text="中奖时间"
                android:textColor="#c66c00"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|bottom"
                android:text="奖品"
                android:textColor="#c66c00"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|bottom"
                android:text="状态"
                android:textColor="#c66c00"
                android:textSize="16sp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="#fdb886"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/lvBody"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:divider="@color/transparent"
            android:scrollbars="none"
            app:layout_heightPercent="62%"
            app:layout_widthPercent="100%"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:padding="10dp"
            app:layout_heightPercent="12%"
            app:layout_widthPercent="100%"
            android:visibility="gone"
            >

            <TextView
                android:id="@+id/tvUp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/white_rectangle_circle"
                android:gravity="center"
                android:text="上一页"
                android:textColor="#ee404a"/>

            <TextView
                android:id="@+id/tvPage"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="1/1"
                android:textColor="#fffceb"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tvNext"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/white_rectangle_circle"
                android:gravity="center"
                android:text="下一页"
                android:textColor="#ee404a"/>
        </LinearLayout>
    </com.huanxi.toutiao.ui.view.PercentLinearLayout>

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="right"
        android:src="@drawable/happy_xxx"
        app:layout_marginRightPercent="5%"/>

</android.support.percent.PercentFrameLayout>
