<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white_color"
    >


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        style="@style/newsItemBaseStyle"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:layout_gravity="center_vertical"
            >

            <TextView
                android:id="@+id/tv_news_title"
                style="@style/newsItemImgOneTextTitleStyle"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/tv_date"
                    style="@style/newsItemDescBaseStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="刚刚"
                    />

                <android.support.v4.widget.Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    />



                <ImageView
                    android:id="@+id/iv_item_delete"
                    android:layout_width="28dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    android:src="@drawable/icon_news_item_delete"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/home_item_divider_color"
                />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_news_img"
            android:layout_width="110dp"
            android:layout_height="74dp"
            android:layout_gravity="center_vertical"
            android:background="@color/colorAccent"
            />

    </LinearLayout>


</LinearLayout>
